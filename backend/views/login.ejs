<!DOCTYPE html>
<html>
<head>
    <title>LibraLink - 로그인</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="/login.css">
    <%
    // 데이터 선언
    let showPassword = false;
    %>
</head>
<body>
    <div class="login-container">
        <div class="login-box">
            <a href="/" class="logo">LibraLink</a>
            <form action="/login" method="POST">
                <div class="form-group">
                    <label>아이디</label>
                    <input type="text" name="username" placeholder="id" />
                </div>

                <div class="form-group">
                    <label>비밀번호</label>
                    <div class="password-input">
                        <input 
                            type="password" 
                            name="password"
                            id="passwordField"
                            placeholder="password"
                        />
                        <span 
                            class="eye-icon" 
                            onclick="togglePasswordVisibility()"
                        >
                            <img 
                                id="eyeIcon"
                                src="images/eye-closed.png"
                                alt="toggle password visibility" 
                            />
                        </span>
                    </div>
                </div>

                <div class="login-options">
                    <div class="remember-me">
                        <input type="checkbox" id="remember" name="remember" />
                        <label for="remember">아이디 저장</label>
                    </div>
                    <div class="links">
                        <a href="/idfind">아이디 찾기</a>
                        <span class="divider">|</span>
                        <a href="/pwfind">비밀번호 찾기</a>
                    </div>
                </div>

                <button type="submit" class="login-button">
                    로그인
                </button>
                
                <div class="register">
                    <button type="button" class="register-button" onclick="location.href='/signup'">
                        회원가입
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        let showPassword = false;
        
        function togglePasswordVisibility() {
            const passwordField = document.getElementById('passwordField');
            const eyeIcon = document.getElementById('eyeIcon');
            
            showPassword = !showPassword;
            
            if (showPassword) {
                passwordField.type = 'text';
                eyeIcon.src = 'images/eye-open.png';
            } else {
                passwordField.type = 'password';
                eyeIcon.src = 'images/eye-closed.png';
            }
        }

        // 아이디 저장 기능
        window.onload = function() {
            const savedUsername = localStorage.getItem('savedUsername');
            if (savedUsername) {
                document.querySelector('input[name="username"]').value = savedUsername;
                document.getElementById('remember').checked = true;
            }
        }

        document.querySelector('form').addEventListener('submit', function(e) {
            const rememberMe = document.getElementById('remember').checked;
            const username = document.querySelector('input[name="username"]').value;
            
            if (rememberMe) {
                localStorage.setItem('savedUsername', username);
            } else {
                localStorage.removeItem('savedUsername');
            }
        });
    </script>
</body>
</html>